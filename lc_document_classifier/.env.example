# LC Document Classifier Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# OpenRouter API Key (Required)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key-here

# =============================================================================
# AI CLASSIFICATION SETTINGS
# =============================================================================

# AI Model Configuration
CLASSIFICATION_MODEL=openai/o3-mini
CLASSIFICATION_TEMPERATURE=1.0
CLASSIFICATION_MAX_TOKENS=65536

# Classification Confidence Thresholds
CONFIDENCE_THRESHOLD=0.5
HIGH_CONFIDENCE_THRESHOLD=0.8

# =============================================================================
# DATA CONFIGURATION
# =============================================================================

# JSON Data File Paths (absolute or relative to project root)
LC_JSON_PATH=output/LC.json
EXPORT_DOCS_JSON_PATH=output/Export_docs.json

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================

# Batch Processing Settings
BATCH_SIZE=10
MAX_RETRIES=3
REQUEST_TIMEOUT=60

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Logging and Debug
LOG_LEVEL=INFO
DEBUG_MODE=false

# LangGraph Studio Configuration
LANGGRAPH_STUDIO_PORT=8007

# =============================================================================
# OPTIONAL LANGFUSE TRACING (for monitoring)
# =============================================================================

# Uncomment and fill these if you want to use Langfuse tracing
# LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
# LANGFUSE_SECRET_KEY=your-langfuse-secret-key
# LANGFUSE_HOST=https://cloud.langfuse.com